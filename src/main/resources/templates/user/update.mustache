{{> /layout/header}}

<div class="container mt-3">
    <form action="/user/{{user.id}}" method="post">
        <input type="hidden" id="id" value="{{user.id}}">
        <div class="mb-3 mt-3">
            <input type="text" class="form-control" value="{{user.username}}" name="username" readonly>
        </div>
        <div class="mb-3">
            <input type="password" class="form-control" value="{{user.password}}" name="password" required>
        </div>
        <div class="mb-3">
            <input type="email" class="form-control" value="{{user.email}}" name="email" required>
        </div>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
        <div><input type="submit" class="btn btn-secondary" value="Обновить"/></div>
    </form>
</div>

{{> /layout/footer}}